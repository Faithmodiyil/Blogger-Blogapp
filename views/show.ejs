<%- include ("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header" ><%= blog.title %></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" style="height:350px;width: 350px;" src="<%= blog.image%>">
            <div class="content">
                <span><%= blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p style="margin-left: 15px;"><%- blog.body %></p>
            </div>
            <a class="ui basic orange button" href="/blogs/<%= blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST"> 
              <button class="ui basic red button">Delete</button>
            </form>
        </div>
    </div>
     
</div>
<%- include ("partials/footer") %>