<div class="container">
<%- include ("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header" >New Blog</div>
<form class="ui form" action="/blogs" method="POST">
    <div class="field">
        <label class="font">Title</label>
        <input type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
        <label class="font">Image</label>
        <input type="text" name="blog[image]" placeholder="image">
    </div>
    <div class="field">
        <label class="font">Blog Content</label>
        <textarea name="blog[body]" id="required" cols="30" rows="10" placeholder="Your lines goes here"></textarea>
    </div>
    <div class="field">
        <input class=" ui primary button" type="submit">
    </div>

</form>
<%- include ("partials/footer") %>
</div>